<!-- CONTENT -->
<div id="content" data-uk-height-viewport="expand: true">
  <div class="uk-container uk-container-expand">
    <!-- panel -->
    <div class="uk-width-1-1@l">
      <div class="uk-card uk-card-default uk-card-large uk-card-hover">
        <div class="uk-card-header">
          <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto">
              <h2 class="uk-text-bold">Registration List</h2>
              <a
                href="/cp/export/xlsx"
                class="uk-button uk-button-secondary"
              >Export to Excel</a>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <table class="uk-table uk-table-small uk-table-divider">
            <thead>
              <tr>
                <th>Date</th>
                <th>First Name, Last Name</th>
                <th>Country</th>
                <th>Network Name</th>
                <th>Kutaisi Reunion</th>
                <th>Svaneti Post-reunion</th>
                <th>Optional Activity</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              {{#applications}}
                <tr>
                  <th>{{formatDate createdAt}}</th>
                  <th>{{firstName}} {{lastName}}</th>
                  <th>{{country}}</th>
                  <th>{{networkName}}</th>
                  <th>{{describeOption feeKutaisi}}</th>
                  <th>{{describeOption feeSvaneti}}</th>
                  <th>{{optionalActivity}}</th>
                  <th>{{totalFee
                      networkName
                      feeKutaisi
                      feeSvaneti
                      aFullName
                    }}</th>
                  <th><a
                      href="/cp/registration/{{_id}}"
                      class="uk-button uk-button-primary"
                    >Details</a></th>
                </tr>

              {{/applications}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /CONTENT -->